{{#show_modal}}

   <script>
       $(document).ready(function() {
           prep_modal();
       });

       function prep_modal()
       {
           $(".modal").each(function() {

               var element = this;
               var pages = $(this).find('.modal-split');


               if (pages.length != 0)
               {
                   pages.hide();
                   pages.eq(0).show();


                   var b_button = document.createElement("button");
                   b_button.setAttribute("type","button");
                   b_button.setAttribute("class","btn btn-primary");
                   b_button.setAttribute("style","display: none; background-color: #fff!important; color: #ccc!important; width:50px; margin-right: 30px;");
                   b_button.innerHTML = "Zur√ºck";

                   var n_button = document.createElement("button");
                   n_button.setAttribute("type","button");
                   n_button.setAttribute("class","btn btn-primary starten");
                   n_button.innerHTML ="Starten";



                   $(this).find('.modal-body').append(b_button).append(n_button);


                   $('.cancel').click(function() {
                       $(location).prop('href', 'https://reisen.ontour.org/zugangscode?code=true')
                   });

                   $('.last').click(function() {
                       $( "#start_form" ).submit();
                   });

                   var page_track = 0;

                   $(n_button).click(function() {

                       const n_button = $(".starten");
                       n_button.text("Weiter");

                       pages.eq(0).show();

                       //alert(page_track);

                       this.blur();
                       $(n_button).prop( "disabled", false );

                       if(page_track != 0){
                          // $('.modal-footer').hide();
                       }



                       if(page_track == 0)
                       {
                           $(b_button).show();
                           $('.cancel').hide();
                           var input = $('#className').val();

                           if( input != "" ) {
                               $(n_button).prop( "disabled", false );
                           }else{
                               $(n_button).prop( "disabled", true );
                           }

                       }

                       if(page_track == 1)
                       {
                           $(b_button).show();

                           var input = $('#school').val();

                           if( input != "" ) {
                               $(n_button).prop( "disabled", false );
                           }else{
                               $(n_button).prop( "disabled", true );
                           }

                       }

                       if(page_track == 2)
                       {
                           $(b_button).show();

                           var input = $('#school').val();

                           if( input != "" ) {
                               $(n_button).prop( "disabled", false );
                           }else{
                               $(n_button).prop( "disabled", true );
                           }

                       }

                       if(page_track == 3)
                       {

                           $(b_button).show();

                           {{#mailing_operator_no}}
                               $(n_button).click();
                           {{/mailing_operator_no}}

                           {{#mailing}}
                               var input = $('#email').val();

                               if( input != "" ) {
                                   $(n_button).prop( "disabled", false );
                               }else{
                                   $(n_button).prop( "disabled", true );
                               }
                           {{/mailing}}

                       }

                       if(page_track == pages.length-3)
                       {

                           $(b_button).show();

                           var input = $('#firstname').val();

                           if( input != "" ) {
                               $(n_button).prop( "disabled", false );
                           }else{
                               $(n_button).prop( "disabled", true );
                           }

                       }

                       if(page_track == pages.length-2)
                       {
                           $(n_button).text("Zum Videoprojekt");
                           $(n_button).addClass( "last" );
                           $(".last").prop( "disabled", true );
                           checkBoxes()
                       }else{
                           $(n_button).removeClass( "last" );
                       }

                       if(page_track == pages.length-1)
                       {
                           $(element).find("form").submit();
                       }

                       if(page_track < pages.length-1)
                       {
                           page_track++;

                           pages.hide();
                           pages.eq(page_track).show();
                       }


                   });

                   $(b_button).click(function() {

                       //alert(page_track);

                       $(n_button).prop( "disabled", false );

                       if(page_track == 1)
                       {
                           $(b_button).hide();
                       }

                       if(page_track == 4)
                       {
                           {{#mailing_operator_no}}
                               $(b_button).click();
                           {{/mailing_operator_no}}
                       }


                       if(page_track == pages.length-1)
                       {
                           $(n_button).text("Next");
                       }

                       if(page_track > 0)
                       {
                           page_track--;

                           pages.hide();
                           pages.eq(page_track).show();
                       }

                   });
               }

               $('#AGB').change(function() {
                   checkBoxes();
               });

               $('#data').change(function() {
                   checkBoxes();
               });

               $('#className').on('input', function() {

                   var input = $(this);
                   if( input.val() != "" ) {
                       $(n_button).prop( "disabled", false );
                   }else{
                       $(n_button).prop( "disabled", true );
                   }

               });

               $('#school').on('input', function() {

                   var input = $(this);
                   if( input.val() != "" ) {
                       $(n_button).prop( "disabled", false );
                   }else{
                       $(n_button).prop( "disabled", true );
                   }

               });

               $('#email').on('input', function() {

                   var input = $(this);
                   if( input.val() != "" ) {
                       $(n_button).prop( "disabled", false );
                   }else{
                       $(n_button).prop( "disabled", true );
                   }

               });

               $('#firstname').on('input', function() {

                   var input = $(this);
                   if( input.val() != "" && $('#lastname').val() != "") {
                       $(n_button).prop( "disabled", false );
                   }else{
                       $(n_button).prop( "disabled", true );
                   }

               });

               $('#lastname').on('input', function() {

                   var input = $(this);
                   if( input.val() != "" && $('#firstname').val() != "") {
                       $(n_button).prop( "disabled", false );
                   }else{
                       $(n_button).prop( "disabled", true );
                   }

               });


           });
       }



       function checkBoxes(){

           if($("#AGB").is(':checked')){
               if($("#data").is(':checked')){
                   $(".last").prop( "disabled", false );
               }else{
                   $(".last").prop( "disabled", true );
               }

           }else{
               $(".last").prop( "disabled", true );
           }

       }

   </script>
