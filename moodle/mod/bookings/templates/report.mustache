<div class="container">
    <div class="content-section" style="width: 98%;">
        <br>
        <h2>Buchungsverwaltung</h2>
        <br>

        <form action="" method="get">
            <div class="row">

                <div class="col-md-2">
                    <input type="text" id="search_id" name="search_id" placeholder="Buchungsnummer oder Z-Code" class="form-control student-list" value="{{{searchterm}}}">
                </div>
                <div class="col-sm-3">
                    <input type="hidden" value="172" id="id" name="id">
                    <input type="submit" class="btn btn-primary" id="filter-buid" value="Buchung suchen"/>
                </div>

            </div>
        </form>





        {{#no_results}}
