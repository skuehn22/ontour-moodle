        <h4>Buchenden</h4>
    </div>
</div>

<input type="hidden" value="{{{b_id}}}" id="b_id" name="b_id">

<form action="" method="get" id="codes">
    <div class="row pb-3">
        <div class="col-2">
            Z-Codes
        </div>
        <div class="col-6">
            <input type="submit" class="btn btn-primary" id="send_codes" value="senden"/>
        </div>
        <div class="col-1">
            <span class="sent_codes_mail" style="color: green; display: none;">gesendet</span>
        </div>
    </div>
</form>

